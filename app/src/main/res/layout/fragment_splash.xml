<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:contentDescription="@string/splash_image"
        android:scaleType="centerCrop"
        android:src="@drawable/spash" />

    <ImageView
        android:id="@+id/splash_red_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:contentDescription="@string/splash_red_overlay"
        android:scaleType="centerCrop"
        android:src="@drawable/splash_init" />

</FrameLayout>